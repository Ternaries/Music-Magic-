<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layout/head')%>
</head>

<body>
    <header>
        <%- include('../layout/header')%>
    </header>
    <main>
        <section>
            <% favResults.forEach(value=>{ %>
                <div>
                    <h3>
                        <%=value.title_short%>
                    </h3>
                    <p>
                        <%=value.artist_name%>
                    </p>
                    <img src="<%=value.artist_picture%>" alt="">
                    <p> 
                        <%= value.lyrics%>
                    </p>

                    <audio controls>
                        <source src="<%=value.audio %>" type="audio/mpeg">
                    </audio>


                    <!-- <button onclick="window.location.href = '/details/<%=value.id%>';">View Details</button> -->
                </div>
                <form action="/favorites/<%=value.id %>?_method=delete" method="POST">
                 <button>Remove From favorites </button>
                </form>

                <form action="/addComment/<%=value.id %>">
                    <button>Add Comment</button>
                </form>

                <%})%>
        </section>
    </main>
</body>

</html>