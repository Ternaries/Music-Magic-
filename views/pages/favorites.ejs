<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../layout/head')%>
    <link rel="stylesheet" href="./styles/anagheem.css">
</head>

<body>
    <header>
        <%- include('../layout/header')%>
    </header>
    <main>
        <section>
            <% favResults.forEach(value=>{ %>
                <div>
                    <h3 id="title">
                        <%=value.title_short%>
                    </h3>
                    <p id="name">
                        <%=value.artist_name%>
                    </p>
            
                    <img id="img" src="<%=value.artist_picture%>" alt="">
               
                    <p>
                        <%= value.lyrics%>
                    </p>

                    <audio controls id="audio">
                        <source src="<%=value.audio %>" type="audio/mpeg">
                    </audio>
                    <p>
                        <%=value.comment%>
                    </p>


                    <!-- <button onclick="window.location.href = '/details/<%=value.id%>';">View Details</button> -->
                </div>
                <form action="/favorites/<%=value.id %>?_method=delete" method="POST">
                    <button id="remove">Remove From favorites </button>
                </form>

                <form action="/editSong/<%=value.id %>">
                    <button id="update">Update Song Details</button>
                </form>

                <%})%>
        </section>
    </main>
    <%-include('../layout/footer')%>
</body>

</html>